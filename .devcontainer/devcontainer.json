{
	"name": "Photo-SLAM",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/Photo-SLAM,type=bind,consistency=cached", 
	"workspaceFolder": "/workspace/Photo-SLAM",
	"runArgs": ["--gpus=all", "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined", "--privileged"]

